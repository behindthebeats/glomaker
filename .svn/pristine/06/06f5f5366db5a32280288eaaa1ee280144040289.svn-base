/* CSS file for the Editor section */

.contentArea
{
	background-color: #a7a7a7;
	padding-left: 20;
	padding-right: 20;
	padding-top: 20;
	padding-bottom: 20;
}

.backgroundCanvas {
	shadow-distance: 3;
	shadow-direction: right;
	border-style: solid;
	drop-shadow-enabled: true;
	drop-shadow-color: #000000;
}

.newProjectList {
	background-color: #f3f3f3;
	roll-over-color: #c6c6c6;
	text-selected-color: #999999;	
}


.guidancePanel {
	background-image: Embed("../skins/bg/pattern_guidance_bg.png");
	background-size: "100%";
	padding-top: 3;
	padding-left: 15;
}

.patternLabel
{
	font-family: VerdanaBoldEmbedded;
	font-weight: bold;
	font-size: 16;
	color: #333333;
}

.sequenceTitle {
	font-family: VerdanaBoldEmbedded;
	font-weight: bold;
	font-size: 10;
	color: #333333;
}

.guidanceRadioLabel {
	font-family: VerdanaBoldEmbedded;
	font-weight: bold;
	font-size: 10;
	color: #cacaca;
}

.guidanceRadios {
	font-family: VerdanaBoldEmbedded;
	font-weight: bold;
	font-size: 9;
	color: #cacaca;
	text-align: center;
	text-selected-color: #cacaca;
	text-roll-over-color: #cacaca;
}

.pageList {
	border-color: #fefefe;
	border-thickness: 2;
	border-style: solid;
	background-color: #f3f3f3;
	padding-top: 0;
	padding-bottom: 0;
}

.pageListItem {
	border-style: solid;
	border-thickness-bottom: 1;
	border-color: #999999;
	background-color: #f3f3f3;
}

.popupMenu {
	background-color: #f5f5f5;
	padding-left: 5;
	padding-top: 5;
	padding-bottom: 5;
	padding-right: 5;
}

.propertiesPanel {
	
	background-color: #c7c7c7;
	
	border-style: solid;
	border-thickness: 2;
	border-color: #f5f5f5;
	
	padding-left: 3;
	padding-top: 3;
	padding-bottom: 3;
	padding-right: 3;
}

.propertiesPanelLabel {
	color: #ffffff;
	font-size: 9;
	font-weight: bold;
}

.propertiesPanelInput {
	font-size: 9;
}

.propertiesPanelButton {
	font-size: 9;
}