<HorzPropertiesPanelCode xmlns="org.glomaker.app.view.properties.*"
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:components="org.glomaker.app.view.components.*"
>

	<mx:Text id="typeLabel" text="" width="70" selectable="false" fontWeight="bold"/>

	<components:GLOToolBar id="dimensionContainer" width="150" height="100%">
		<mx:HBox>
			<mx:Label text="X:" width="20" styleName="propertiesPanelLabel"/>
			<mx:TextInput id="xInput" restrict="0-9" width="40"/>
		</mx:HBox>
		<mx:HBox>
			<mx:Label text="W:" width="20" styleName="propertiesPanelLabel"/>
			<mx:TextInput id="wInput" restrict="0-9" width="40"/>
		</mx:HBox>
		<mx:HBox>
			<mx:Label text="Y:" width="20" styleName="propertiesPanelLabel"/>
			<mx:TextInput id="yInput" restrict="0-9" width="40"/>
		</mx:HBox>
		<mx:HBox>
			<mx:Label text="H:" width="20" styleName="propertiesPanelLabel"/>
			<mx:TextInput id="hInput" restrict="0-9" width="40"/>
		</mx:HBox>
	</components:GLOToolBar>
	
	<mx:VRule id="verticalLine" height="100%" strokeWidth="1" strokeColor="#f5f5f5"/>
	
	<components:GLOToolBar width="100%" height="100%" id="controlsContainer">
	</components:GLOToolBar>
	
</HorzPropertiesPanelCode>
